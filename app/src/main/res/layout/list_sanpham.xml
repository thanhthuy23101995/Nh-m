<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/write_dark"
    android:orientation="vertical">
    <android.support.v7.widget.CardView
        android:layout_margin="10dp"

      android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:elevation="5dp"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingBottom="20dp"
            android:paddingTop="20dp">

            <ImageView
                android:id="@+id/imgSanpham"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:layout_weight="3"
                android:padding="10dp"
                android:src="@drawable/binhgas" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="5"
                android:orientation="vertical"
                android:paddingLeft="10dp">

                <TextView
                    android:id="@+id/textTen"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.5"
                    android:paddingRight="10dp"
                    android:paddingTop="10dp"
                    android:text="Binh ga so 1"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/textGia"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:text="250.000 VND"
                    android:textColor="@android:color/holo_red_dark" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:clickable="true">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/text_Tru"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"

                                android:clickable="true"
                                android:paddingLeft="@dimen/activity_vertical_margin"
                                android:paddingRight="@dimen/activity_vertical_margin"
                                android:text="-"
                                android:textSize="@dimen/text_SL" />

                            <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:background="#E8E8E8"
                                android:paddingBottom="2dp"
                                android:paddingTop="2dp" />

                            <TextView
                                android:id="@+id/text_so_luong"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:paddingLeft="@dimen/activity_vertical_margin"
                                android:paddingRight="@dimen/activity_vertical_margin"
                                android:text="1"
                                android:textColor="@android:color/black"
                                android:textSize="@dimen/text_SL" />

                            <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:background="#E8E8E8"
                                android:paddingBottom="10dp"
                                android:paddingTop="2dp" />

                            <TextView
                                android:id="@+id/text_cong"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"

                                android:clickable="true"
                                android:paddingLeft="@dimen/activity_vertical_margin"
                                android:paddingRight="@dimen/activity_vertical_margin"
                                android:text="+"
                                android:textSize="@dimen/text_SL" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="2dp"
                            android:background="#E8E8E8" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/imgDelete"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20dp"
                        android:src="@drawable/ic_delete" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>